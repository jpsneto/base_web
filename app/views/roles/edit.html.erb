<h2><%= t('.title', default: "Edit #{Role.model_name.human}") %></h2>

<%= form_for(@role, html: {method: :put}) do |f| %> 
    <%= render partial: 'form', locals: { f: f} %>
    <div class="actions pull-right">
      <%= link_to t('all'), roles_path, class: 'btn btn-default' %> <%= f.submit t('save'), class: 'btn btn-info' %>
    </div>
<% end %>