      <%= f.label 'Imagem' %>
      <%= f.file_field :attachment %>
    </div>
    <div class="bs-callout bs-callout-danger col-md-12">
      <fieldset>
        <legend>Financeiro</legend>
      </fieldset>
      <div class="form-group">
        <%= f.label :preco_custo %><br>
        <%= f.text_field :preco_custo, class: 'form-control field-moeda' %>
      </div>
      <div class="form-group">
        <%= f.label :margem_lucro %><br>
        <%= f.text_field :margem_lucro, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :custo_medio %><br>
